.main{
  width:90%;
  position: relative;
  display:flex;
  margin-top:50px;
  border: 1px solid #f5f5f5;
  border-radius: 5px;
  background: whitesmoke;
  flex-direction: column;
}
.content_wrapper{
  flex: 1;
  padding: 5px 10px;
  height: 50px;
  display: flex;
  flex-direction: row;
}
.content_wrapper .check{
  margin-top: 11px;
  flex: 1;
  border-radius: 50%;
}
.content_wrapper .content{
  flex: 6;
  opacity: .5;
  margin-top: 10px;
  height: 30px;
  font-size: 14px;
}
.content_wrapper .true{
  color:silver;
  border-bottom: 1px solid silver;
  text-decoration: line-through;
}
.content_wrapper .false{
  color:#0099CC;
  border-bottom: 1px solid #0099CC;
  text-decoration: none;
}
.content_wrapper .content:hover{
   opacity: 1;
}
.tips{
  font-size: 14px;
  color: #99CCCC;
}
.ctrl{
  width:100% ;
}
.ctrl .btn_wrapper{
  float: left;
  height: 35px;
  width: 65%;
  display: flex;
  flex-direction: row;
}
.ctrl .clear_wrapper{
  height: 100%;
  float: right;
  width: 20%;
}
.ctrl .clear_wrapper .clear{
  padding:0;
  height: 35px;
  font-size: 12px;
  color: #0099CC;
  opacity: .6;
}
.ctrl .clear_wrapper .clear:active{
  opacity: 1;
}
.ctrl .btn_wrapper .btn{
  flex:1;
  padding: 0;
  font-size: 12px;
  background: transparent;
  color: #0099CC;
  border: 1px solid white;
}
.ctrl .btn_wrapper .btn:hover{
  background: #0099CC;
  color: white;
  border: 1px solid white;
}

